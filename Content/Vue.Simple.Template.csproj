<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <PackageId>Vue.Simple.Template</PackageId>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <Version>0.1.5</Version>
    <Description>A template for Vue Js using Asp.Net Core and Webpack</Description>
    <Copyright>Copyright 2017</Copyright>
    <Authors>Jaxel Rojas</Authors>
    <Company>Jaxel Rojas</Company>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/Jaxelr/VueTemplate</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Jaxelr/VueTemplate</RepositoryUrl>
    <PackageTags>Vue Template</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" Version="2.1.0" />
    <PackageReference Include="Microsoft.AspNetCore.SpaServices" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>
</Project>
